{
    "openapi": "3.0.0",
    "info": {
        "title": "Estudent",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8081/estudent/api",
            "description": "Rest API Server"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "User login",
                "operationId": "2dd578ff7aba2721293dac66833b27d1",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "indexNum",
                                    "password"
                                ],
                                "properties": {
                                    "indexNum": {
                                        "type": "string",
                                        "example": "2023/2222"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "test"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Login Successful"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Logouts user, by deleting its token",
                "operationId": "68a6108af04af5e3bc1ea68a6c6f1299",
                "responses": {
                    "200": {
                        "description": "Success: You have logged out and the token was deleted"
                    },
                    "400": {
                        "description": "Error: You are not currently logged in"
                    }
                }
            }
        },
        "/course-exams": {
            "get": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Get paginated course exams with filters",
                "operationId": "getCourseExams",
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CourseExamFiltersDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Paginated list of course exams",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "content": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/CourseExam"
                                            }
                                        },
                                        "total-pages": {
                                            "type": "integer",
                                            "example": 5
                                        },
                                        "total-elements": {
                                            "type": "integer",
                                            "example": 47
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/course-exams/remaining-course-exams": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Get all remaining course exams for currently logged-in student in provided exam period",
                "operationId": "c6bfec0fb059d1dd0d07c7133b89cb5f",
                "parameters": [
                    {
                        "name": "for-exam-period-id",
                        "in": "query",
                        "description": "Exam period ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 5
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Remaining CourseExams retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/course-exams/registerable-course-exams": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Get all course-exams for current user that he did not register for yet in any active exam period",
                "operationId": "a0f0c0beddd775b1ec66bcdfbdbc60ff",
                "responses": {
                    "200": {
                        "description": "Registerable CourseExams retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/course-exam-reports/{courseExamId}": {
            "get": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Download Excel report for a course exam identified by courseExamId",
                "operationId": "getCourseExamReport",
                "parameters": [
                    {
                        "name": "course-exam-id",
                        "in": "path",
                        "description": "ID of the CourseExam to generate the report for, will include all exam registrations for that course exam",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Excel file download",
                        "content": {
                            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-periods": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Retrieve only currently active or all exam periods",
                "operationId": "186c665c6b4c191a6d2c438c808110e7",
                "parameters": [
                    {
                        "name": "only-active",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "[Active]ExamPeriods retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-registrations": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Retrieve exam registrations",
                "operationId": "exam-registrations/index",
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ExamRegistrationFiltersDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Exam registrations retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Store new exam registration",
                "operationId": "exam-registrations/store",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SubmitExamRegistrationDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "ExamRegistration stored successfully."
                    },
                    "400": {
                        "description": "Validation errors:.../CourseExam with provided course_id:x, and exam_period_id:x doesn't exist/Registration no longer in progress for given exam period"
                    },
                    "409": {
                        "description": "ExamRegistration for provided course_id:x, and exam_period_id:x and student_id:x already exist"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-registrations/student": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Retrieve exam registrations for the authenticated student",
                "description": "Retrieve exam registrations for the authenticated student, applying filters but forcing student_id to user->id",
                "operationId": "488fd754c9c0d8e9538e4f116668bf36",
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ExamRegistrationFiltersDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Exam registrations retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-registrations/not-graded": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Retrieve not graded exam registrations only for logged in/passed student",
                "operationId": "ab0b64e80d99320635581146113cadb7",
                "parameters": [
                    {
                        "name": "student-id",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Not graded exam registrations retrieved successfully"
                    },
                    "404": {
                        "description": "Student with id student_id not found"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-registrations/not-graded/all": {
            "get": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Retrieve not graded exam registrations for all students",
                "operationId": "600051d4b1752207b2f8a9eca9cf7fb7",
                "responses": {
                    "200": {
                        "description": "All not graded exam registrations retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-registrations/{examRegistrationId}": {
            "put": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Update existing exam registration",
                "operationId": "exam-registrations/update",
                "parameters": [
                    {
                        "name": "exam-registration-id",
                        "in": "path",
                        "description": "ID of the exam registration to update",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ExamRegistrationUpdateDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Updated successfully"
                    },
                    "403": {
                        "description": "Error: Forbidden"
                    },
                    "404": {
                        "description": "ExamRegistration not found"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Delete existing exam registration",
                "operationId": "exam-registrations/destroy",
                "parameters": [
                    {
                        "name": "exam-registration-id",
                        "in": "path",
                        "description": "ID of the exam registration to delete",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deleted successfully"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "ExamRegistration not found"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "CourseExamFiltersDTO": {
                "properties": {
                    "page": {
                        "type": "integer",
                        "example": 1
                    },
                    "page-size": {
                        "type": "integer",
                        "example": 10
                    },
                    "course-name": {
                        "type": "string",
                        "example": "matematika"
                    },
                    "date-from": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-01"
                    },
                    "date-to": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-30"
                    }
                },
                "type": "object"
            },
            "ExamRegistrationFiltersDTO": {
                "properties": {
                    "search-text": {
                        "type": "string",
                        "example": ""
                    },
                    "page": {
                        "type": "integer",
                        "example": 1
                    },
                    "page-size": {
                        "type": "integer",
                        "example": 10
                    },
                    "include-not-graded": {
                        "type": "boolean",
                        "example": false
                    },
                    "include-failed": {
                        "type": "boolean",
                        "example": false
                    },
                    "include-passed": {
                        "type": "boolean",
                        "example": false
                    },
                    "student-id": {
                        "type": "integer",
                        "example": 123
                    }
                },
                "type": "object"
            },
            "SubmitExamRegistrationDTO": {
                "required": [
                    "course-exam-id",
                    "student-id"
                ],
                "properties": {
                    "course-exam-id": {
                        "description": "ID of the CourseExam",
                        "type": "integer",
                        "example": 12
                    },
                    "student-id": {
                        "description": "ID of the Student",
                        "type": "integer",
                        "example": 34
                    }
                },
                "type": "object"
            },
            "ExamRegistrationUpdateDTO": {
                "required": [
                    "has-attended"
                ],
                "properties": {
                    "mark": {
                        "type": "integer",
                        "example": 5
                    },
                    "has-attended": {
                        "type": "boolean",
                        "example": true
                    },
                    "comment": {
                        "type": "string",
                        "example": ""
                    }
                },
                "type": "object"
            },
            "CourseExam": {
                "title": "CourseExam",
                "properties": {
                    "examPeriod": {
                        "$ref": "#/components/schemas/ExamPeriod"
                    },
                    "course": {
                        "$ref": "#/components/schemas/CourseInstance"
                    },
                    "examDateTime": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-06-20T10:00:00"
                    },
                    "hall": {
                        "type": "string",
                        "example": "A1"
                    }
                },
                "type": "object"
            },
            "CourseInstance": {
                "title": "CourseInstance",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 5
                    },
                    "name": {
                        "type": "string",
                        "example": "Matematika"
                    },
                    "semester": {
                        "type": "integer",
                        "example": 2
                    },
                    "espb": {
                        "type": "integer",
                        "example": 6
                    },
                    "participants": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            },
            "ExamPeriod": {
                "title": "ExamPeriod",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "June 2025"
                    },
                    "dateRegisterStart": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-05-01"
                    },
                    "dateRegisterEnd": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-05-31"
                    },
                    "dateStart": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-15"
                    },
                    "dateEnd": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-20"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "apiKey",
                "description": "Bearer Token",
                "in": "header",
                "scheme": "https",
                "name": "Authorization"
            }
        }
    },
    "tags": [
        {
            "name": "Common Routes",
            "description": "Common Routes"
        },
        {
            "name": "Admin Routes",
            "description": "Admin Routes"
        }
    ],
    "security": [
        {
            "oauth2_security_example": [
                "read",
                "write"
            ],
            "passport": []
        }
    ]
}