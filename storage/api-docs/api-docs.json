{
    "openapi": "3.0.0",
    "info": {
        "title": "Estudent",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8001/estudent/api",
            "description": "Rest API Server"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "User login",
                "operationId": "db796f6b9fcaafe72fe9d75abce190c4",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "indexNum",
                                    "password"
                                ],
                                "properties": {
                                    "indexNum": {
                                        "type": "string",
                                        "example": "2023/0891"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "test"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Login Successful"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Logouts user, by deleting its token",
                "operationId": "80771e416bab6ac96bc4fc16d25e1776",
                "responses": {
                    "200": {
                        "description": "Success: You have logged out and the token was deleted"
                    },
                    "400": {
                        "description": "Error: You are not currently logged in"
                    }
                }
            }
        },
        "/admin/course-exams": {
            "get": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Get paginated course exams with filters",
                "operationId": "getCourseExams",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "page-size",
                        "in": "query",
                        "description": "Page size",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    },
                    {
                        "name": "course-name",
                        "in": "query",
                        "description": "Course name",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "matematika"
                        }
                    },
                    {
                        "name": "date-from",
                        "in": "query",
                        "description": "Start date (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-06-01"
                        }
                    },
                    {
                        "name": "date-to",
                        "in": "query",
                        "description": "End date (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-06-30"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated list of course exams"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/course-exams/remaining-course-exams": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Get all remaining course exams for currently logged-in student in provided exam period",
                "operationId": "df4897fe0c3f550f3dbdae949e049cf4",
                "parameters": [
                    {
                        "name": "for-exam-period-id",
                        "in": "query",
                        "description": "Exam period ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 5
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Remaining CourseExams retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/course-exams/registerable-course-exams": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Get all course-exams for current user that he did not register for yet in any active exam period",
                "operationId": "3940c257d6ac396c5ceafc669b750125",
                "responses": {
                    "200": {
                        "description": "Registerable CourseExams retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/admin/course-exam-reports/{courseExamId}": {
            "get": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Download Excel report for a course exam identified by courseExamId",
                "operationId": "getCourseExamReport",
                "parameters": [
                    {
                        "name": "courseExamId",
                        "in": "path",
                        "description": "ID of the CourseExam to generate the report for, will include all exam registrations for that course exam",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 18
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Excel file download",
                        "content": {
                            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-periods": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Retrieve only currently active or all exam periods",
                "operationId": "6c7faa2a1b720878a4fda96f685f8215",
                "parameters": [
                    {
                        "name": "only-active",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "[Active]ExamPeriods retrieved successfully"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/admin/exam-registrations": {
            "get": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Retrieve exam registrations",
                "operationId": "exam-registrations/index",
                "parameters": [
                    {
                        "name": "search-text",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page-size",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "include-not-graded",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "include-failed",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "include-passed",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated list of exam registrations"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-registrations": {
            "get": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Retrieve exam registrations for the authenticated student",
                "description": "Retrieve exam registrations for the authenticated student, applying filters but forcing student_id to user->id",
                "operationId": "4ff77c650c54644fd5babe2421bbba25",
                "parameters": [
                    {
                        "name": "search-text",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page-size",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "include-not-graded",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "include-failed",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "include-passed",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "student-id",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated list of exam registrations"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Store new exam registration",
                "operationId": "exam-registrations/store",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SubmitExamRegistrationDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "ExamRegistration stored successfully."
                    },
                    "400": {
                        "description": "Validation errors:.../CourseExam with provided course_id:x, and exam_period_id:x doesn't exist/Registration no longer in progress for given exam period"
                    },
                    "409": {
                        "description": "ExamRegistration for provided course_id:x, and exam_period_id:x and student_id:x already exist"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/admin/exam-registrations/{examRegistrationId}": {
            "put": {
                "tags": [
                    "Admin Routes"
                ],
                "summary": "Update existing exam registration",
                "operationId": "exam-registrations/update",
                "parameters": [
                    {
                        "name": "exam-registration-id",
                        "in": "path",
                        "description": "ID of the exam registration to update",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ExamRegistrationUpdateDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Updated successfully"
                    },
                    "403": {
                        "description": "Error: Forbidden"
                    },
                    "404": {
                        "description": "ExamRegistration not found"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/exam-registrations/{examRegistrationId}": {
            "delete": {
                "tags": [
                    "Common Routes"
                ],
                "summary": "Delete existing exam registration",
                "operationId": "exam-registrations/destroy",
                "parameters": [
                    {
                        "name": "exam-registration-id",
                        "in": "path",
                        "description": "ID of the exam registration to delete",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deleted successfully"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "ExamRegistration not found"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "CourseExam": {
                "title": "CourseExam",
                "properties": {
                    "examPeriod": {
                        "$ref": "#/components/schemas/ExamPeriod"
                    },
                    "course": {
                        "$ref": "#/components/schemas/CourseInstance"
                    },
                    "examDateTime": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-06-20T10:00:00"
                    },
                    "hall": {
                        "type": "string",
                        "example": "A1"
                    }
                },
                "type": "object"
            },
            "CourseInstance": {
                "title": "CourseInstance",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 5
                    },
                    "name": {
                        "type": "string",
                        "example": "Matematika"
                    },
                    "semester": {
                        "type": "integer",
                        "example": 2
                    },
                    "espb": {
                        "type": "integer",
                        "example": 6
                    },
                    "participants": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            },
            "ExamPeriod": {
                "title": "ExamPeriod",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "June 2025"
                    },
                    "dateRegisterStart": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-05-01"
                    },
                    "dateRegisterEnd": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-05-31"
                    },
                    "dateStart": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-15"
                    },
                    "dateEnd": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-20"
                    }
                },
                "type": "object"
            },
            "ExamRegistration": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "courseExam": {
                        "$ref": "#/components/schemas/CourseExam"
                    },
                    "student": {
                        "$ref": "#/components/schemas/User"
                    },
                    "signedBy": {
                        "$ref": "#/components/schemas/User"
                    },
                    "mark": {
                        "type": "integer",
                        "example": 5
                    },
                    "hasAttended": {
                        "type": "boolean",
                        "example": true
                    },
                    "comment": {
                        "type": "string",
                        "example": ""
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-12T12:00:00"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "indexNum": {
                        "type": "string",
                        "example": "2020/0012"
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "example": "john.doe@example.com"
                    },
                    "role": {
                        "type": "string",
                        "example": "student"
                    },
                    "courses": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "examRegistrations": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "signedRegistrations": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "CourseExamFiltersDTO": {
                "properties": {
                    "page": {
                        "type": "integer",
                        "example": 1
                    },
                    "page-size": {
                        "type": "integer",
                        "example": 10
                    },
                    "course-name": {
                        "type": "string",
                        "example": "matematika"
                    },
                    "date-from": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-01"
                    },
                    "date-to": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-30"
                    }
                },
                "type": "object"
            },
            "ExamRegistrationFiltersDTO": {
                "properties": {
                    "search-text": {
                        "type": "string",
                        "example": ""
                    },
                    "page": {
                        "type": "integer",
                        "example": 1
                    },
                    "page-size": {
                        "type": "integer",
                        "example": 10
                    },
                    "include-not-graded": {
                        "type": "boolean",
                        "example": false
                    },
                    "include-failed": {
                        "type": "boolean",
                        "example": false
                    },
                    "include-passed": {
                        "type": "boolean",
                        "example": false
                    },
                    "student-id": {
                        "type": "integer",
                        "example": 123
                    }
                },
                "type": "object"
            },
            "SubmitExamRegistrationDTO": {
                "required": [
                    "course-exam-id",
                    "student-id"
                ],
                "properties": {
                    "course-exam-id": {
                        "description": "ID of the CourseExam",
                        "type": "integer",
                        "example": 12
                    },
                    "student-id": {
                        "description": "ID of the Student",
                        "type": "integer",
                        "example": 34
                    }
                },
                "type": "object"
            },
            "ExamRegistrationUpdateDTO": {
                "required": [
                    "has-attended"
                ],
                "properties": {
                    "mark": {
                        "type": "integer",
                        "example": 5
                    },
                    "has-attended": {
                        "type": "boolean",
                        "example": true
                    },
                    "comment": {
                        "type": "string",
                        "example": ""
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "apiKey",
                "description": "Bearer Token",
                "in": "header",
                "scheme": "https",
                "name": "Authorization"
            }
        }
    },
    "tags": [
        {
            "name": "Common Routes",
            "description": "Common Routes"
        },
        {
            "name": "Admin Routes",
            "description": "Admin Routes"
        }
    ],
    "security": [
        {
            "oauth2_security_example": [
                "read",
                "write"
            ],
            "passport": []
        }
    ]
}